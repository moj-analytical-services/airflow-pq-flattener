{
    "Version": "2012-10-17",
    "Statement": [{
            "Sid": "ListGlueJobFiles",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::alpha-cds-raw",
                "arn:aws:s3:::alpha-cds-curated-open-data"
            ]
        },
        {
            "Sid": "UploadReadGlueJobsFiles",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject"
            ],
            "Resource": "arn:aws:s3:::alpha-cds-curated-open-data/_GlueJobs_/*"
        },
        {
            "Sid": "CreateAndStartGlueJob",
            "Effect": "Allow",
            "Action": [
                "glue:CreateJob",
                "glue:StartJobRun",
                "glue:GetJobRun",
                "glue:GetJobBookmark",
                "glue:DeleteJob"
            ],
            "Resource": "*"
        },
        {
            "Sid": "PassRoleToGlueService",
            "Effect": "Allow",
            "Action": [
                "iam:PassRole"
            ],
            "Resource": "arn:aws:iam::593291632749:role/alpha_pq_flattener",
            "Condition": {
                "StringLike": {
                    "iam:PassedToService": [
                        "glue.amazonaws.com"
                    ]
                }
            }
        },
        {
            "Sid": "PutMetricData",
            "Effect": "Allow",
            "Action": [
                "cloudwatch:PutMetricData"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
            ],
            "Resource": [
                "arn:aws:logs:*:*:/aws-glue/*"
            ]
        },
        {
            "Sid": "CanReadPQsJSONfiles",
            "Effect": "Allow",
            "Action": "s3:GetObject",
            "Resource": "arn:aws:s3:::alpha-cds-raw/open_data/parliamentary_questions/*.json"
        },
        {
            "Sid": "HeadBucket",
            "Effect": "Allow",
            "Action": "s3:HeadBucket",
            "Resource": "*"
        },
        {
            "Sid": "CanWritePQsCSVFile",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:DeleteObject"
            ],
            "Resource": [
                "arn:aws:s3:::alpha-cds-curated-open-data/parliamentary_questions/*",
                "arn:aws:s3:::alpha-cds-curated-open-data/parliamentary_questions_$folder$"
            ]
        }
    ]
}